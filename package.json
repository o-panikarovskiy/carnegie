{
  "name": "carnegie",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/o-panikarovskiy/carnegie.git"
  },
  "author": "oleg.pnk@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/o-panikarovskiy/carnegie/issues"
  },
  "homepage": "https://github.com/o-panikarovskiy/carnegie#readme",
  "scripts": {
    "start": "tsc && export NODE_ENV=develop && node ./dist/server.js",
    "build": "tsc && npm run lint",
    "lint": "eslint . --ext .ts",
    "tsc": "tsc",
    "docs": "rm -rf ./doc || true && npx apidoc -f \".*\\.ts$\" -i ./src -o ./doc",
    "clear": " find ./src -type f \\( -name \"*.map\" -or -name \"*.js\" \\) -delete",
    "deploy": "./deploy.sh",
    "pretest": "tsc && export NODE_ENV=test && node src/tests/init.js",
    "test": "ava",
    "posttest": "node src/tests/clear.js"
  },
  "dependencies": {
    "axios": "0.21.1",
    "http-status-codes": "2.1.4",
    "joi": "17.4.2",
    "koa": "2.13.1",
    "koa-body": "4.2.0",
    "koa-router": "10.1.1",
    "koa-send": "5.0.1",
    "koa-static": "5.0.0",
    "pug": "3.0.2"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/http-status-codes": "1.2.0",
    "@types/koa": "2.13.4",
    "@types/koa-router": "7.4.4",
    "@types/koa-send": "4.1.3",
    "@types/koa-static": "4.0.2",
    "@types/node": "16.7.10",
    "@types/pug": "2.0.5",
    "@types/sinon": "10.0.2",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "ava": "3.15.0",
    "eslint": "7.32.0",
    "loadtest": "5.1.2",
    "sinon": "11.1.2",
    "supertest": "6.1.6",
    "typescript": "4.4.3"
  },
  "ava": {
    "files": [
      "**/*.spec.js"
    ],
    "environmentVariables": {
      "NODE_ENV": "test"
    },
    "concurrency": 5,
    "verbose": true,
    "failFast": true
  },
  "apidoc": {
    "name": "Verbatim",
    "title": "Verbatim API",
    "url": "/api/v0"
  }
}
